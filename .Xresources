xscreensaver.splash: false

!font settings
xscreensaver.Dialog.headingFont:        -*-clean-*-*-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-clean-*-*-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-clean-*-*-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-clean-*-*-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-clean-*-*-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-clean-*-*-*-*-14-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-clean-*-*-*-*-14-*-*-*-*-*-*-*

!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #fcaf3e
xscreensaver.Dialog.background:         #2e3436
xscreensaver.Dialog.topShadowColor:     #111111
xscreensaver.Dialog.bottomShadowColor:  #111111
xscreensaver.Dialog.Button.foreground:  #fcaf3e
xscreensaver.Dialog.Button.background:  #000000

!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #fcaf3e
xscreensaver.Dialog.text.background:    #000000
xscreensaver.Dialog.internalBorderWidth:36
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2

!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #fcaf3e
xscreensaver.passwd.thermometer.background:  #2e3436
xscreensaver.passwd.thermometer.width:       0

!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %I:%M%p - %a %b %d, %Y
